<%- include('../includes/header.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div>
            <form action="/admin/<% if(editState) { %>save-edit-product<% } else { %>save-product<% } %>" method="post">
                <div class="form-control">
                    <label for="title">Name</label>
                    <input type="text" name="title" value="<% if(editState) { %><%= item.title %><% } %>" id="title">
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image Url</label>
                    <input type="text" name="imageUrl" value="<% if(editState) { %><%= item.imageUrl %> <% } %>" id="imageUrl">
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input type="number" name="price" value="<% if(editState) { %><%= item.price %><% } %>" id="price">
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <input type="textarea" name="description" value="<% if(editState) { %><%=item.description%><% } %>" id="description" rows="5">
                </div>
                <input type="hidden" name="id" value="<% if(editState) { %><%=item.id%><% } %>">
                <button type="submit">Submit</button>
            </form>
        </div>
    </main>
</body>
</html>